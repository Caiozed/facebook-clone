<h1><%= @post.author %></h1>

<p><%= @post.content%></p>

<h2>Create a comment:</h2>

<%= form_for :comment, url: post_comments_path(params[:id]) do |f|%>

	<%= f.label :content%>
	<%= f.text_area :content%>

	<%= f.submit "Create" %>
<%end%>

<h2>Comments:</h2>

<%if @comments%>
	<% @comments.each do |comment|%>
		<h3><%= comment.author %></h3>
		<p><%= comment.content %></p>
	<%end%>
<%end%>